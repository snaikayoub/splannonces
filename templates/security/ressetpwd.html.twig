{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %} {{ title }} {% endblock %}




{% block body %}
<div class="col d-lg-flex justify-content-center">
    <h4>{{ title }}</h4>
</div>

<div class="container m-3 p-5 col-md-10 bg-secondary text-light">
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">{{ form_row(form.opassword,{'attr':{'placeholder' : 'Votre ancien Mot de passe'},'label':'Votre ancien Mot de passe'})}}
        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.npassword,{'attr':{'placeholder' : 'Votre nouveau Mot de passe'},'label':'Votre nouveau Mot de passe','data':''})}}
        </div>
    </div>
    <div class="row">

        <div class="col-md-6">
            {{ form_row(form.confirm_npassword,{'attr':{'placeholder' : 'Confirmez Votre nouveau Mot de passe'},'label':'Confirmez Votre nouveau Mot de
            passe'})}}
        </div>

    </div>


    <div class="row py-3 ">
        <button type="submit" class="btn btn-primary mx-auto col-lg-3 m-3">Enregistrer</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock body %}

{% block javascripts %}

<script>

    var champs = document.getElementsByClassName("form-control");
    for (i = 0; i < champs.length; i++) {
        champs[i].setAttribute("style", "padding: .2em;")
    }

</script>

{% endblock javascripts %}