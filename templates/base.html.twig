                        <ul class="dropdown-menu mx-5 " aria-labelledby="dropdownMenu">
                            <li><a tabindex="-1" href="{{ path('logout') }}" class="btn btn-sm d-none d-lg-flex mx-1 rounded"
                                    style="font-size: 1.1em;">DÃ©connexion</a></li>
                            <li><a tabindex="-1" href="" class="btn btn-sm d-none d-lg-flex mx-1 rounded" style="font-size: 1.1em;">Parametres</a>
                            </li>
                            <li><a href="{{ path('mes.annonces',{'user': app.user.username}) }}" class="btn  btn-sm d-none d-lg-flex mx-1 rounded"
                                    style="font-size: 1.1em;">Mes annonces</a></li>

                            <li class="divider"></li>

                            <li><a tabindex="-1" href="{{ path('logout') }}" class="btn  btn-sm d-none d-lg-flex mx-1 rounded"
                                    style="font-size: 1.1em;">Contactez-nous</a>
                            </li>

                        </ul>
                    </div>

                    {% else %}
                    <a href="{{ path('login') }}" class="btn btn-primary d-none btn-sm d-lg-flex mx-1 rounded-pill" style="font-size: 1.3em;">Connexion</a>
                    <a href="{{ path('register') }}" class="btn btn-primary d-none btn-sm d-lg-flex mx-1 rounded-pill" style="font-size: 1.3em;">Inscription</a>
                    {% endif %}
                </div>
                <!--//docs-top-utilities-->
            </div>
            <!--//container-->
        </div>
        <!--//branding-->
